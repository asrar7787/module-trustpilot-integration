<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<body>
		<referenceBlock name="product.info.details">
			<block class="Magento\Catalog\Block\Product\View" name="product.info.trustpilot.detail" as="trustpilot-detail" template="Jjcommerce_TrustpilotIntegration::product/view/trustpilot-review-detail.phtml" group="detailed_info" >
				<arguments>
					<argument translate="true" name="title" xsi:type="string">Reviews</argument>
				</arguments>
			</block>
		</referenceBlock>
		<referenceBlock name="product.info.review" remove="true" />
		<referenceBlock name="reviews.tab" remove="true" />
    </body>
</page>
